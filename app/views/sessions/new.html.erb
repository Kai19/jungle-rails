<h1 class="login">Login</h1>

<%= form_tag '/login' do %>
  <%= text_field_tag :email, "", class: 'login-username', placeholder: 'email'  %>
  <%= password_field_tag :password, "", class: 'login-username', placeholder: 'password' %>
  <%= submit_tag "Submit", class: 'login-submit'  %>
<% end %>

<div class="underlay-black"></div>