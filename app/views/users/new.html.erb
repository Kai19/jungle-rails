<!-- app/views/users/new.html.erb -->

<h1 class="register">Join the Jungle!</h1>

<%= form_for :user, :class => 'login-form', url: '/users' do |f| %>
 <%= f.text_field :name, :class => 'login-username' , placeholder: 'name' %>
 <%= f.text_field :email, :class => 'login-username' , placeholder: 'email'  %>
 <%= f.password_field :password, :class => 'login-username'  , placeholder: 'password'  %>
 <%= f.password_field :password_confirmation, :class => 'login-username'  , placeholder: 'comfirm password'  %>
 <%= f.submit "Submit", :class => 'login-submit' %>
<% end %>
<div class="underlay-black"></div>